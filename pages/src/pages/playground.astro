---
import DocsLayout from "../layouts/DocsLayout.astro";
import { Icon } from "astro-icon/components";
import type { Lang } from "../i18n/translations";
import { t } from "../i18n/translations";

const currentPath = `/playground/`;
---

<DocsLayout
  lang="en"
  title={t("en", "playground.title")}
  description={t("en", "playground.description")}
  currentPath="/playground/"
>
  <h1>{t("en", "playground.title")}</h1>
  <p>{t("en", "playground.description")}</p>

  <div class="playground-container">
    <div class="playground-pane">
      <div class="pane-header">
        <span>NoShift.js</span>
        <div class="pane-actions">
          <button id="btn-compile" class="btn btn-primary">
            <Icon name="material-symbols:build" />
            {t("en", "playground.compile")}
          </button>
          <button id="btn-run" class="btn btn-outline">
            <Icon name="material-symbols:play-arrow" />
            {t("en", "playground.run")}
          </button>
        </div>
      </div>
      <textarea
        id="src-code"
        placeholder={t("en", "playground.writeCode")}
        spellcheck="false"></textarea>
    </div>

    <div class="playground-pane">
      <div class="pane-header">
        <span>{t("en", "playground.compiledCode")}</span>
        <button
          id="btn-copy"
          class="btn btn-outline btn-icon"
          title="Copy to clipboard"
          style="padding: 0.25rem 0.5rem;"
        >
          <Icon name="material-symbols:content-copy-outline" />
        </button>
      </div>
      <textarea id="out-code" readonly spellcheck="false"></textarea>
    </div>
  </div>

  <div class="playground-results">
    <div class="pane-header">
      <span>{t("en", "playground.executionResult")}</span>
      <button
        id="btn-scroll-top"
        class="btn btn-outline btn-icon"
        title="Scroll to top"
        style="padding: 0.25rem 0.5rem;"
      >
        <Icon name="material-symbols:arrow-upward" />
      </button>
    </div>
    <div id="exec-result" class="result-area"></div>
  </div>
</DocsLayout>

<style>
  .playground-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  @media (min-width: 800px) {
    .playground-container {
      flex-direction: row;
    }
  }

  .playground-pane {
    flex: 1;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--bg-surface);
  }

  .pane-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1.25rem;
    background: var(--bg-code);
    border-bottom: 1px solid var(--border);
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-primary);
  }

  .pane-header .btn {
    padding: 0.35rem 1rem;
    font-size: 0.85rem;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .pane-header .btn-icon {
    padding: 0.25rem 0.5rem;
  }

  .pane-header .btn [data-icon] {
    width: 1.25rem;
    height: 1.25rem;
  }

  .pane-actions {
    display: flex;
    gap: 0.5rem;
  }

  textarea {
    width: 100%;
    height: 250px;
    min-height: 150px;
    padding: 1.25rem;
    border: none;
    background: transparent;
    color: var(--text-primary);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.6;
    resize: vertical;
    outline: none;
  }

  textarea::placeholder {
    color: var(--text-muted);
  }

  #out-code {
    color: var(--text-secondary);
    background: var(--bg-code);
  }

  .playground-results {
    margin-top: 1.5rem;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--bg-code);
    display: flex;
    flex-direction: column;
  }

  .result-area {
    padding: 1.25rem;
    min-height: 120px;
    max-height: 350px;
    overflow-y: auto;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    white-space: pre-wrap;
    color: var(--text-secondary);
    line-height: 1.6;
  }
</style>

<script>
  const srcCode = document.getElementById("src-code") as HTMLTextAreaElement;
  const outCode = document.getElementById("out-code") as HTMLTextAreaElement;
  const btnCompile = document.getElementById(
    "btn-compile",
  ) as HTMLButtonElement;
  const btnRun = document.getElementById("btn-run") as HTMLButtonElement;
  const execResult = document.getElementById("exec-result") as HTMLDivElement;
  const btnScrollTop = document.getElementById(
    "btn-scroll-top",
  ) as HTMLButtonElement;
  const btnCopy = document.getElementById("btn-copy") as HTMLButtonElement;

  // Sync textarea heights
  const observer = new ResizeObserver((entries) => {
    let newHeight = 0;
    for (const entry of entries) {
      newHeight = entry.contentRect.height;
      if (entry.target === srcCode) {
        if (outCode.style.height !== `${newHeight}px`) {
          outCode.style.height = `${newHeight}px`;
        }
      } else if (entry.target === outCode) {
        if (srcCode.style.height !== `${newHeight}px`) {
          srcCode.style.height = `${newHeight}px`;
        }
      }
    }
  });

  observer.observe(srcCode);
  observer.observe(outCode);

  let compile: any = null;

  function doCompile() {
    if (!compile) {
      outCode.value = "Compiler is loading...";
      return;
    }
    try {
      const result = compile(srcCode.value);
      outCode.value = result.outputText;
    } catch (err: any) {
      outCode.value = "Compilation Error:\n" + err.message;
    }
  }

  btnCompile.addEventListener("click", doCompile);

  let currentWorker: Worker | null = null;

  btnRun.addEventListener("click", () => {
    const code = outCode.value;
    execResult.innerHTML = "";
    btnRun.disabled = true;
    btnRun.style.opacity = "0.7";

    document
      .querySelector(".playground-results")
      ?.scrollIntoView({ behavior: "smooth" });

    if (currentWorker) {
      currentWorker.terminate();
    }

    function appendLog(text: string, type: "log" | "error" = "log") {
      const el = document.createElement("div");
      if (type === "error") {
        el.style.color = "var(--warning)";
      }
      el.textContent = text;
      execResult.appendChild(el);
    }

    // Worker code for safe execution
    const workerCode = `
      const originalLog = console.log;
      const originalWarn = console.warn;
      const originalError = console.error;

      console.log = function(...args) {
        self.postMessage({ type: 'log', data: args.map(a => String(a)).join(' ') });
      };

      console.warn = function(...args) {
        self.postMessage({ type: 'log', data: args.map(a => String(a)).join(' ') });
      };

      console.error = function(...args) {
        self.postMessage({ type: 'error', data: args.map(a => String(a)).join(' ') });
      };

      self.onmessage = function(e) {
        try {
          const result = new Function(e.data)();
          if (result !== undefined) {
            self.postMessage({ type: 'log', data: String(result) });
          }
          self.postMessage({ type: 'done' });
        } catch(err) {
          self.postMessage({ type: 'error', data: err.toString() });
          self.postMessage({ type: 'done' });
        }
      };
    `;

    const blob = new Blob([workerCode], { type: "application/javascript" });
    const workerUrl = URL.createObjectURL(blob);
    const worker = new Worker(workerUrl);
    currentWorker = worker;

    function cleanupWorker() {
      if (currentWorker === worker) {
        currentWorker = null;
      }
      URL.revokeObjectURL(workerUrl);
      worker.terminate();
      btnRun.disabled = false;
      btnRun.style.opacity = "1";
    }

    worker.onmessage = (e) => {
      if (e.data.type === "log") {
        appendLog(e.data.data, "log");
      } else if (e.data.type === "error") {
        appendLog(e.data.data, "error");
      } else if (e.data.type === "done") {
        cleanupWorker();
      }
    };

    worker.onerror = (e) => {
      appendLog(e.message, "error");
      cleanupWorker();
    };

    worker.postMessage(code);

    // Safety timeout (2 seconds)
    setTimeout(() => {
      if (currentWorker === worker) {
        appendLog("Execution timed out (2s limit).", "error");
        cleanupWorker();
      }
    }, 2000);
  });

  // initial template
  srcCode.value = "console.log^8^2^3hello, ^3world!^2^9;";
  outCode.value = "Loading compiler module...";

  // Dynamically load the module
  // @ts-ignore
  import("https://unpkg.com/noshift.js@latest/dist/index.mjs")
    .then((mod) => {
      compile = mod.compile;
      doCompile();
    })
    .catch((err: any) => {
      outCode.value = "Failed to load compiler:\n" + err.message;
    });

  btnScrollTop?.addEventListener("click", () => {
    window.scrollTo({ top: 0, left: 0, behavior: "smooth" });
  });

  btnCopy?.addEventListener("click", () => {
    navigator.clipboard.writeText(outCode.value).then(() => {
      const icon = btnCopy.querySelector("[data-icon]");
      if (icon) {
        const currentIcon = icon.getAttribute("data-icon");
        icon.setAttribute("data-icon", "material-symbols:check");
        setTimeout(() => {
          icon.setAttribute(
            "data-icon",
            currentIcon || "material-symbols:content-copy-outline",
          );
        }, 2000);
      }
    });
  });
</script>
