---
import DocsLayout from "../../layouts/DocsLayout.astro";
import type { Lang } from "../../i18n/translations";
import { t } from "../../i18n/translations";

export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "ja" } }];
}

const { lang } = Astro.params as { lang: Lang };
const currentPath = `/${lang}/playground/`;
---

<DocsLayout
  lang={lang}
  title={t(lang, "playground.title")}
  description={t(lang, "playground.description")}
  currentPath={currentPath}
>
  <h1>{t(lang, "playground.title")}</h1>
  <p>{t(lang, "playground.description")}</p>

  <div class="playground-container">
    <div class="playground-pane">
      <div class="pane-header">
        <span>NoShift.js</span>
        <button id="btn-compile" class="btn btn-primary">{t(lang, "playground.compile")}</button>
      </div>
      <textarea id="src-code" placeholder={t(lang, "playground.writeCode")} spellcheck="false"></textarea>
    </div>

    <div class="playground-pane">
      <div class="pane-header">
        <span>{t(lang, "playground.compiledCode")}</span>
        <button id="btn-run" class="btn btn-outline">{t(lang, "playground.run")}</button>
      </div>
      <textarea id="out-code" readonly spellcheck="false"></textarea>
    </div>
  </div>

  <div class="playground-results">
    <div class="pane-header">
      <span>{t(lang, "playground.executionResult")}</span>
    </div>
    <div id="exec-result" class="result-area"></div>
  </div>
</DocsLayout>

<style>
.playground-container {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-top: 2rem;
}

@media (min-width: 800px) {
  .playground-container {
    flex-direction: row;
    height: 450px;
  }
}

.playground-pane {
  flex: 1;
  display: flex;
  flex-direction: column;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--bg-surface);
}

.pane-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 1.25rem;
  background: var(--bg-code);
  border-bottom: 1px solid var(--border);
  font-weight: 600;
  font-size: 0.95rem;
  color: var(--text-primary);
}

.pane-header .btn {
  padding: 0.35rem 1rem;
  font-size: 0.85rem;
  border-radius: var(--radius-sm);
}

textarea {
  flex: 1;
  width: 100%;
  padding: 1.25rem;
  border: none;
  background: transparent;
  color: var(--text-primary);
  font-family: var(--font-mono);
  font-size: 0.9rem;
  line-height: 1.6;
  resize: none;
  outline: none;
}

textarea::placeholder {
  color: var(--text-muted);
}

#out-code {
  color: var(--text-secondary);
  background: var(--bg-code);
}

.playground-results {
  margin-top: 1.5rem;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--bg-code);
  display: flex;
  flex-direction: column;
}

.result-area {
  padding: 1.25rem;
  min-height: 120px;
  max-height: 350px;
  overflow-y: auto;
  font-family: var(--font-mono);
  font-size: 0.9rem;
  white-space: pre-wrap;
  color: var(--text-secondary);
  line-height: 1.6;
}
</style>

<script>
  import { compile } from "noshift.js";

  const srcCode = document.getElementById("src-code") as HTMLTextAreaElement;
  const outCode = document.getElementById("out-code") as HTMLTextAreaElement;
  const btnCompile = document.getElementById("btn-compile") as HTMLButtonElement;
  const btnRun = document.getElementById("btn-run") as HTMLButtonElement;
  const execResult = document.getElementById("exec-result") as HTMLDivElement;

  function doCompile() {
    try {
      const result = compile(srcCode.value, { noHeader: true });
      outCode.value = result.outputText;
    } catch (err: any) {
      outCode.value = "Compilation Error:\n" + err.message;
    }
  }

  // Auto-compile when typing stops
  let timeout: ReturnType<typeof setTimeout>;
  srcCode.addEventListener("input", () => {
    clearTimeout(timeout);
    timeout = setTimeout(doCompile, 400);
  });

  btnCompile.addEventListener("click", doCompile);

  let currentWorker: Worker | null = null;

  btnRun.addEventListener("click", () => {
    const code = outCode.value;
    execResult.innerHTML = "";
    btnRun.disabled = true;
    btnRun.style.opacity = "0.7";

    if (currentWorker) {
      currentWorker.terminate();
    }

    function appendLog(text: string, type: 'log' | 'error' = 'log') {
      const el = document.createElement("div");
      if (type === 'error') {
        el.style.color = "var(--warning)";
      }
      el.textContent = text;
      execResult.appendChild(el);
    }

    // Worker code for safe execution
    const workerCode = `
      const originalLog = console.log;
      const originalWarn = console.warn;
      const originalError = console.error;

      console.log = function(...args) {
        self.postMessage({ type: 'log', data: args.map(a => String(a)).join(' ') });
      };

      console.warn = function(...args) {
        self.postMessage({ type: 'log', data: args.map(a => String(a)).join(' ') });
      };

      console.error = function(...args) {
        self.postMessage({ type: 'error', data: args.map(a => String(a)).join(' ') });
      };

      self.onmessage = function(e) {
        try {
          const result = new Function(e.data)();
          if (result !== undefined) {
            self.postMessage({ type: 'log', data: String(result) });
          }
          self.postMessage({ type: 'done' });
        } catch(err) {
          self.postMessage({ type: 'error', data: err.toString() });
          self.postMessage({ type: 'done' });
        }
      };
    `;

    const blob = new Blob([workerCode], { type: 'application/javascript' });
    const workerUrl = URL.createObjectURL(blob);
    const worker = new Worker(workerUrl);
    currentWorker = worker;

    function cleanupWorker() {
      if (currentWorker === worker) {
         currentWorker = null;
      }
      URL.revokeObjectURL(workerUrl);
      worker.terminate();
      btnRun.disabled = false;
      btnRun.style.opacity = "1";
    }

    worker.onmessage = (e) => {
      if (e.data.type === 'log') {
        appendLog(e.data.data, 'log');
      } else if (e.data.type === 'error') {
        appendLog(e.data.data, 'error');
      } else if (e.data.type === 'done') {
        cleanupWorker();
      }
    };

    worker.onerror = (e) => {
      appendLog(e.message, 'error');
      cleanupWorker();
    };

    worker.postMessage(code);
    
    // Safety timeout (2 seconds)
    setTimeout(() => {
      if (currentWorker === worker) {
        appendLog("Execution timed out (2s limit).", "error");
        cleanupWorker();
      }
    }, 2000);
  });

  // initial template
  srcCode.value = "console.log^2Hello World!^2;";
  doCompile();
</script>
