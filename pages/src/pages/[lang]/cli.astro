---
import DocsLayout from "../../layouts/DocsLayout.astro";
import CodeBlock from "../../components/CodeBlock.astro";
import { t, type Lang } from "../../i18n/translations";

export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "ja" } }];
}

const { lang } = Astro.params as { lang: Lang };
---

<DocsLayout
  lang={lang}
  title={t(lang, "nav.cli") + " | NoShift.js"}
  currentPath={`/${lang}/cli/`}
  prev={{ href: `/${lang}/classes/`, title: t(lang, "nav.classes") }}
  next={{ href: `/${lang}/config/`, title: t(lang, "nav.config") }}
>
  <h1>{t(lang, "nav.cli")}</h1>
  <p set:html={t(lang, "cli.introDesc")} />

  <h2>{t(lang, "cli.compileTitle")}</h2>
  <p set:html={t(lang, "cli.compileDesc")} />
  <CodeBlock lang="bash" code={`# Global\nnsc\n\n# Local\nnpx nsc`} />

  <h2 set:html={t(lang, "cli.watchTitle")} />
  <p set:html={t(lang, "cli.watchDesc")} />
  <CodeBlock
    lang="bash"
    code={`# Global\nnsc watch\n\n# Local\nnpx nsc watch`}
  />

  <h2 set:html={t(lang, "cli.runTitle")} />
  <p set:html={t(lang, "cli.runDesc")} />
  <CodeBlock
    lang="bash"
    code={`# Global\nnsc run src/index.nsjs\n\n# Local\nnpx nsc run src/index.nsjs`}
  />

  <h2 set:html={t(lang, "cli.createCmdTitle")} />
  <p set:html={t(lang, "cli.createCmdDesc")} />
  <CodeBlock
    lang="bash"
    code={`# Global\nnsc create my-project\n\n# Local\nnpx nsc create my-project`}
  />

  <h2 set:html={t(lang, "cli.initTitle")} />
  <p set:html={t(lang, "cli.initDesc")} />
  <CodeBlock lang="bash" code={`# Global\nnsc init\n\n# Local\nnpx nsc init`} />

  <h2 set:html={t(lang, "cli.cleanTitle")} />
  <p set:html={t(lang, "cli.cleanDesc")} />
  <CodeBlock
    lang="bash"
    code={`# Global\nnsc clean\n\n# Local\nnpx nsc clean`}
  />

  <h2 set:html={t(lang, "cli.versionTitle")} />
  <p set:html={t(lang, "cli.versionDesc")} />
  <CodeBlock
    lang="bash"
    code={`# Global\nnsc version\n\n# Local\nnpx nsc version`}
  />

  <h2 set:html={t(lang, "cli.helpTitle")} />
  <p set:html={t(lang, "cli.helpDesc")} />
  <CodeBlock lang="bash" code={`# Global\nnsc help\n\n# Local\nnpx nsc help`} />
</DocsLayout>
