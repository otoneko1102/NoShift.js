---
import DocsLayout from "../../layouts/DocsLayout.astro";
import { t, type Lang } from "../../i18n/translations";

export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "ja" } }];
}

const { lang } = Astro.params as { lang: Lang };
---

<DocsLayout
  lang={lang}
  title={t(lang, "cli.title") + " â€” NoShift.js"}
  currentPath={`/${lang}/cli/`}
  prev={{ href: `/${lang}/classes/`, title: t(lang, "nav.classes") }}
  next={{ href: `/${lang}/config/`, title: t(lang, "nav.config") }}
>
  <h1>{t(lang, "cli.title")}</h1>
  <p set:html={t(lang, "cli.introDesc")} />

  <h2>{t(lang, "cli.compileTitle")}</h2>
  <p set:html={t(lang, "cli.compileDesc")} />
  <pre><code>nsc</code></pre>

  <h2>{t(lang, "cli.watchTitle")}</h2>
  <p set:html={t(lang, "cli.watchDesc")} />
  <pre><code>nsc watch</code></pre>

  <h2 set:html={t(lang, "cli.runTitle")} />
  <p set:html={t(lang, "cli.runDesc")} />
  <pre><code>nsc run src/index.nsjs</code></pre>

  <h2>{t(lang, "cli.createCmdTitle")}</h2>
  <p set:html={t(lang, "cli.createCmdDesc")} />
  <pre><code>nsc create my-project</code></pre>

  <h2>{t(lang, "cli.initTitle")}</h2>
  <p set:html={t(lang, "cli.initDesc")} />
  <pre><code>nsc init</code></pre>

  <h2>{t(lang, "cli.cleanTitle")}</h2>
  <p set:html={t(lang, "cli.cleanDesc")} />
  <pre><code>nsc clean</code></pre>

  <h2>{t(lang, "cli.versionTitle")}</h2>
  <p set:html={t(lang, "cli.versionDesc")} />
  <pre><code>nsc version</code></pre>

  <h2>{t(lang, "cli.helpTitle")}</h2>
  <p set:html={t(lang, "cli.helpDesc")} />
  <pre><code>nsc help</code></pre>
</DocsLayout>
