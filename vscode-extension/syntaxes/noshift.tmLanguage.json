{
  "name": "NoShift.js",
  "scopeName": "source.noshift",
  "fileTypes": ["nsjs"],
  "patterns": [
    { "include": "#comment-line" },
    { "include": "#comment-block" },
    { "include": "#string-template" },
    { "include": "#string-double" },
    { "include": "#string-single" },
    { "include": "#ns-operators" },
    { "include": "#ns-punctuation" },
    { "include": "#raw-punctuation" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#support" },
    { "include": "#function-call" },
    { "include": "#variables" }
  ],
  "repository": {

    "comment-line": {
      "name": "comment.line.double-slash.noshift",
      "match": "//.*$"
    },

    "comment-block": {
      "name": "comment.block.noshift",
      "begin": "/\\*",
      "end": "\\*/",
      "beginCaptures": { "0": { "name": "punctuation.definition.comment.begin.noshift" } },
      "endCaptures":   { "0": { "name": "punctuation.definition.comment.end.noshift" } }
    },

    "string-double": {
      "name": "string.quoted.double.noshift",
      "begin": "\\^2",
      "end": "\\^2",
      "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.noshift" } },
      "endCaptures":   { "0": { "name": "punctuation.definition.string.end.noshift" } },
      "patterns": [
        {
          "name": "constant.character.escape.noshift",
          "match": "\\\\(?:\\^2|\\\\)"
        }
      ]
    },

    "string-single": {
      "name": "string.quoted.single.noshift",
      "begin": "\\^7",
      "end": "\\^7",
      "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.noshift" } },
      "endCaptures":   { "0": { "name": "punctuation.definition.string.end.noshift" } },
      "patterns": [
        {
          "name": "constant.character.escape.noshift",
          "match": "\\\\(?:\\^7|\\\\)"
        }
      ]
    },

    "string-template": {
      "name": "string.template.noshift",
      "begin": "\\^@",
      "end": "\\^@",
      "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.noshift" } },
      "endCaptures":   { "0": { "name": "punctuation.definition.string.end.noshift" } },
      "patterns": [
        { "include": "#template-expression" },
        {
          "name": "constant.character.escape.noshift",
          "match": "\\\\(?:\\^@|\\\\)"
        }
      ]
    },

    "template-expression": {
      "name": "meta.template.expression.noshift",
      "begin": "\\^4(?:\\^\\[|\\[)",
      "end": "\\^\\]",
      "beginCaptures": { "0": { "name": "punctuation.definition.template-expression.begin.noshift" } },
      "endCaptures":   { "0": { "name": "punctuation.definition.template-expression.end.noshift" } },
      "patterns": [
        { "include": "#comment-line" },
        { "include": "#comment-block" },
        { "include": "#string-template" },
        { "include": "#string-double" },
        { "include": "#string-single" },
        { "include": "#ns-operators" },
        { "include": "#ns-punctuation" },
        { "include": "#raw-punctuation" },
        { "include": "#keywords" },
        { "include": "#constants" },
        { "include": "#support" },
        { "include": "#function-call" },
        { "include": "#variables" }
      ]
    },

    "ns-operators": {
      "patterns": [
        {
          "comment": "NoShift sequences for shift-required symbols (excludes string/bracket delimiters: ^2 ^7 ^@ ^8 ^9 ^[ ^])",
          "name": "keyword.operator.noshift",
          "match": "\\^(?:1|4|5|6|-|\\^|\\\\|;|:|,|\\.|/)"
        }
      ]
    },

    "ns-punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.parens.begin.noshift",
          "match": "\\^8"
        },
        {
          "name": "punctuation.section.parens.end.noshift",
          "match": "\\^9"
        },
        {
          "name": "punctuation.section.block.begin.noshift",
          "match": "\\^\\["
        },
        {
          "name": "punctuation.section.block.end.noshift",
          "match": "\\^\\]"
        }
      ]
    },

    "raw-punctuation": {
      "comment": "Standard (non-shifted) punctuation characters that appear literally in NoShift source",
      "patterns": [
        {
          "name": "keyword.operator.spread.noshift",
          "match": "\\.{3}"
        },
        {
          "name": "punctuation.terminator.statement.noshift",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.noshift",
          "match": ","
        },
        {
          "name": "punctuation.accessor.noshift",
          "match": "\\."
        },
        {
          "name": "punctuation.section.bracket.begin.noshift",
          "match": "\\["
        },
        {
          "name": "punctuation.section.bracket.end.noshift",
          "match": "\\]"
        },
        {
          "name": "keyword.operator.arithmetic.noshift",
          "match": "--|-|/"
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.noshift",
          "match": "\\b(return|throw|break|continue|yield|await)\\b"
        },
        {
          "name": "keyword.control.conditional.noshift",
          "match": "\\b(if|else|switch|case|default)\\b"
        },
        {
          "name": "keyword.control.loop.noshift",
          "match": "\\b(for|while|do|of|in)\\b"
        },
        {
          "name": "keyword.control.exception.noshift",
          "match": "\\b(try|catch|finally)\\b"
        },
        {
          "name": "storage.type.noshift",
          "match": "\\b(var|let|const|function|class)\\b"
        },
        {
          "name": "storage.modifier.noshift",
          "match": "\\b(async|static|extends|get|set|new|delete|typeof|instanceof|void|debugger|with)\\b"
        },
        {
          "name": "keyword.module.noshift",
          "match": "\\b(import|export|from|as)\\b"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.hex.noshift",
          "match": "\\b0[xX][0-9a-fA-F]+n?\\b"
        },
        {
          "name": "constant.numeric.binary.noshift",
          "match": "\\b0[bB][01]+n?\\b"
        },
        {
          "name": "constant.numeric.octal.noshift",
          "match": "\\b0[oO][0-7]+n?\\b"
        },
        {
          "name": "constant.numeric.noshift",
          "match": "\\b(?:\\d+\\.?\\d*|\\.\\d+)(?:[eE][+-]?\\d+)?n?\\b"
        },
        {
          "name": "constant.language.boolean.noshift",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.noshift",
          "match": "\\bnull\\b"
        },
        {
          "name": "constant.language.undefined.noshift",
          "match": "\\bundefined\\b"
        },
        {
          "name": "constant.language.noshift",
          "match": "\\b(NaN|Infinity)\\b"
        }
      ]
    },

    "support": {
      "patterns": [
        {
          "name": "support.class.builtin.noshift",
          "match": "\\b(Array|ArrayBuffer|BigInt|BigInt64Array|BigUint64Array|Boolean|DataView|Date|Error|EvalError|Float32Array|Float64Array|Function|Int8Array|Int16Array|Int32Array|JSON|Map|Math|Number|Object|Promise|Proxy|RangeError|ReferenceError|Reflect|RegExp|Set|SharedArrayBuffer|String|Symbol|SyntaxError|TypeError|URIError|URL|URLSearchParams|Uint8Array|Uint16Array|Uint32Array|Uint8ClampedArray|WeakMap|WeakRef|WeakSet)\\b"
        },
        {
          "name": "support.variable.global.noshift",
          "match": "\\b(console|process|globalThis|global|window|document|navigator|location|history|performance|crypto|localStorage|sessionStorage|WebSocket|Worker)\\b"
        },
        {
          "name": "support.function.builtin.noshift",
          "match": "\\b(parseInt|parseFloat|isNaN|isFinite|decodeURI|decodeURIComponent|encodeURI|encodeURIComponent|eval|setTimeout|setInterval|clearTimeout|clearInterval|setImmediate|clearImmediate|queueMicrotask|structuredClone|fetch|atob|btoa|require)\\b"
        }
      ]
    },

    "function-call": {
      "patterns": [
        {
          "name": "meta.function-call.noshift",
          "match": "\\b([a-zA-Z_$][a-zA-Z0-9_$]*)(?=\\s*\\^8)",
          "captures": {
            "1": { "name": "entity.name.function.noshift" }
          }
        },
        {
          "comment": "Function/method definition: function name or method name followed by ^8",
          "match": "(?<=\\bfunction\\s)([a-zA-Z_$][a-zA-Z0-9_$]*)",
          "captures": {
            "1": { "name": "entity.name.function.definition.noshift" }
          }
        }
      ]
    },

    "variables": {
      "patterns": [
        {
          "name": "variable.language.noshift",
          "match": "\\b(this|super|arguments)\\b"
        },
        {
          "name": "variable.other.constant.noshift",
          "match": "\\b[A-Z][A-Z0-9_]{2,}\\b"
        },
        {
          "name": "entity.name.type.noshift",
          "match": "\\b[A-Z][a-zA-Z0-9_$]*\\b"
        },
        {
          "name": "variable.other.noshift",
          "match": "\\b[a-zA-Z_$][a-zA-Z0-9_$]*\\b"
        }
      ]
    }

  }
}
